<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--配置Servlet-->
    <servlet>
        <servlet-name>servletDemo</servlet-name><!--servlet名称-->
        <servlet-class>com.atguigu.test01servlet.MyServlet</servlet-class><!--serlvet全类名-->
        <load-on-startup>1</load-on-startup><!--servlet实例化时机，数值越小启动优先级越高，负数等价于没配置-->
    </servlet>
    <!--Servlet映射配置-->
    <servlet-mapping>
        <servlet-name>servletDemo</servlet-name><!--servlet名称-->
        <url-pattern>/demo</url-pattern><!--映射路径-->
    </servlet-mapping>


    <servlet>
        <servlet-name>servlet1</servlet-name>
        <servlet-class>com.atguigu.test02servletcreate.MyServlet1</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servlet1</servlet-name>
        <url-pattern>/hello1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet2</servlet-name>
        <servlet-class>com.atguigu.test02servletcreate.MyServlet2</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servlet2</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>servlet3</servlet-name>
        <servlet-class>com.atguigu.test02servletcreate.MyServlet3</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>servlet3</servlet-name>
        <url-pattern>/hello3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyServlet4</servlet-name>
        <servlet-class>com.atguigu.test02servletcreate.MyServlet4</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet4</servlet-name>
        <url-pattern>/hello4</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloServlet2</servlet-name>
        <servlet-class>com.atguigu.test03servletconf.HelloServlet2</servlet-class>
    </servlet>

    <!--HelloServlet2的映射路径1-->

    <servlet-mapping>
        <servlet-name>HelloServlet2</servlet-name>
        <url-pattern>/demo2</url-pattern>
    </servlet-mapping>
    <!--HelloServlet2的映射路径2-->
    <servlet-mapping>
        <servlet-name>HelloServlet2</servlet-name>
        <url-pattern>/demo3/*</url-pattern><!--路径匹配-->
    </servlet-mapping>
    <!--    <servlet-mapping>-->
    <!--        <servlet-name>HelloServlet2</servlet-name>-->
    <!--        <url-pattern>*.do</url-pattern>--><!--后缀匹配-->
    <!--    </servlet-mapping>-->
    <!--
    映射路径的匹配方式：
    1.精确匹配  /abc/123/a
    2.路径匹配  开头字符一定是/ ,最后一定是*
    3.后缀匹配  *.do 或*.action
    4.缺省匹配  /

    -->
    <servlet>
        <servlet-name>ServletDemo1</servlet-name>
        <servlet-class>com.atguigu.test04servletconfigcontext.ServletDemo1</servlet-class>
        <!--指定Servelet内的其他参数-->
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDemo1</servlet-name>
        <url-pattern>/config/demo1</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ServletDemo2</servlet-name>
        <servlet-class>com.atguigu.test04servletconfigcontext.ServletDemo2</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDemo2</servlet-name>
        <url-pattern>/config/demo2</url-pattern>
    </servlet-mapping>
    <!--全局配置参数-->
    <context-param>
        <param-name>xxx</param-name>
        <param-value>111</param-value>
    </context-param>
</web-app>